<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.petshop">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_petshop_gray"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_petshop_gray"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"

            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityCliente"
            android:theme="@style/AppThemeMainPetShop"/>
        <activity
            android:name=".ActivityLoja"
            android:theme="@style/AppThemeMainPetShop"/>
        <activity
            android:name=".PagamentoActivity" />
        <activity
            android:name=".CadastroProduto" />
        <activity
            android:name=".CadastroVeterinario" />
        <activity
            android:name=".VeterinarioActivity" />
        <activity
            android:name=".CadastroCliente"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMainPetShop" />
        <activity
            android:name=".PetShopActivityLogin"
            android:theme="@style/AppThemeMainPetShop" />
        <activity
            android:name=".CadastroAnimal" />
        <activity
            android:name=".AtualizaAnimal" />
        <activity
            android:name=".ActivityShop"
            android:theme="@style/AppThemeMaterial"/>
        <activity
            android:name=".ProdutosComprados"
            android:theme="@style/AppThemeMaterial"/>
    </application>

</manifest>